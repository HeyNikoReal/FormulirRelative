<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="KONFIRMASI PENDAFTARAN"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tb_formulir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_judul"
        android:layout_marginTop="40dp">

        <TableRow android:padding="6dp">

            <TextView android:text="NPM" />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_npm"
                android:text="Isi NPM" />
        </TableRow>

        <TableRow android:padding="6dp">

            <TextView android:text="Nama Mahasiswa" />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_nama"
                android:text="Isi Nama Mahasiswa" />
        </TableRow>

        <TableRow android:padding="6dp">

            <TextView android:text="Jenis Kelamin" />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_jk"
                android:text="Isi Jenis Kelamin" />
        </TableRow>

        <TableRow android:padding="6dp">

            <TextView android:text="Program Studi" />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_prodi"
                android:text="Isi Program Studi" />
        </TableRow>


        <Button
            android:id="@+id/btn_konfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:text="KONFIRMASI" />

    </TableLayout>


</RelativeLayout>